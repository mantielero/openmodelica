{
   "name": "openmodelica-omlibraries",
   "buildsystem": "simple",
   "build-options": {
     "build-args": [
       "--share=network"
     ]
   },

   "build-commands": [
      "make all",
      "mkdir -p /app/lib/omlibrary",
      "mv build/* /app/lib/omlibrary"
   ],
   "sources": [
      {
      "type": "git",
      "url": "https://github.com/OpenModelica/OMLibraries",
      "commit": "eff6efaa31937b27912edebbf608a4a34b50d8c2"
      /* "tag": "v1.9.2" */
      },

      {
         "type": "patch",
         "path": "Makefile.libs.patch",
         "strip-components" : 0
      }
   ]

}
