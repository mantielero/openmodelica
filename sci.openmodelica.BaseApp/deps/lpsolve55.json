         "sha256": "201a7c62b8b3360c884ee2a73ed7667e5716fc1e809755053b398c2f5b0cf28a"
      },
      {
          "type": "patch",
          "path": "cflags.patch"
      },
      {
          "type": "patch",
          "path": "lpsolve-5.5.2.0.defines.patch"
      }
   ]
}
